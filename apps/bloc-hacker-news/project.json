{
  "name": "bloc-hacker-news",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/bloc-hacker-news/src",
  "projectType": "application",
  "targets": {
    "build": {
      "executor": "@nx/vite:build",
      "outputs": ["{options.outputPath}"],
      "defaultConfiguration": "production",
      "options": {
        "outputPath": "dist/apps/bloc-hacker-news"
      },
      "configurations": {
        "development": {
          "mode": "development"
        },
        "production": {
          "mode": "production"
        }
      }
    },
    "serve": {
      "executor": "@nx/vite:dev-server",
      "defaultConfiguration": "development",
      "options": {
        "buildTarget": "bloc-hacker-news:build"
      },
      "configurations": {
        "development": {
          "buildTarget": "bloc-hacker-news:build:development",
          "hmr": true
        },
        "production": {
          "buildTarget": "bloc-hacker-news:build:production",
          "hmr": false
        }
      }
    },
    "preview": {
      "executor": "@nx/vite:preview-server",
      "defaultConfiguration": "development",
      "options": {
        "buildTarget": "bloc-hacker-news:build"
      },
      "configurations": {
        "development": {
          "buildTarget": "bloc-hacker-news:build:development"
        },
        "production": {
          "buildTarget": "bloc-hacker-news:build:production"
        }
      }
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "apps/bloc-hacker-news/jest.config.ts",
        "passWithNoTests": true
      }
    },
    "typecheck": {
      "executor": "nx:run-commands",
      "options": {
        "commands": ["tsc --noEmit -p apps/bloc-hacker-news/tsconfig.app.json"]
      }
    },
    "lint": {
      "executor": "@nx/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["apps/bloc-hacker-news/**/*.{ts,tsx,js,jsx}"]
      }
    }
  },
  "tags": []
}
